/* components/loading/loading.wxss */

.preloader {
  position: relative;
}

.preloader:before {
  width: 20px;
  height: 20px;
  border-radius: 20px;
  content: '';
  position: absolute;
  /* background: #9b59b6; */
  background: #ff7657;
  animation: preloader_before 1.5s infinite ease-in-out;
}

.preloader:after {
  width: 20px;
  height: 20px;
  border-radius: 20px;
  content: '';
  position: absolute;
  background: #2ecc71;
  /* background: #665c84; */
  left: 22px;
  animation: preloader_after 1.5s infinite ease-in-out;
}

@keyframes preloader_before {
  0% {
    transform: translateX(0px) rotate(0deg);
  }

  50% {
    transform: translateX(50px) scale(1.2) rotate(260deg);
    background: #2ecc71;
    /* background: #665c84; */
    border-radius: 0px;
  }

  100% {
    transform: translateX(0px) rotate(0deg);
  }
}

@keyframes preloader_after {
  0% {
    transform: translateX(0px);
  }

  50% {
    transform: translateX(-50px) scale(1.2) rotate(-260deg);
    /* background: #9b59b6; */
    background: #ff7657;
    border-radius: 0px;
  }

  100% {
    transform: translateX(0px);
  }
}
