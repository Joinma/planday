/* components/loading-wave/loading.wxss */

.preloader {
  position: relative;
}

.preloader span {
  display: block;
  bottom: 0px;
  width: 9px;
  height: 5px;
  background: #9b59b6;
  position: absolute;
  animation: preloader 1.5s infinite ease-in-out;
}

.preloader span:nth-child(2) {
  left: 11px;
  animation-delay: 0.2s;
}

.preloader span:nth-child(3) {
  left: 22px;
  animation-delay: 0.4s;
}

.preloader span:nth-child(4) {
  left: 33px;
  animation-delay: 0.6s;
}

.preloader span:nth-child(5) {
  left: 44px;
  animation-delay: 0.8s;
}

@keyframes preloader {
  0% {
    height: 5px;
    transform: translateY(0px);
    background: #9b59b6;
  }

  25% {
    height: 30px;
    transform: translateY(15px);
    background: #3498db;
  }

  50% {
    height: 5px;
    transform: translateY(0px);
    background: #9b59b6;
  }

  100% {
    height: 5px;
    transform: translateY(0px);
    background: #9b59b6;
  }
}
