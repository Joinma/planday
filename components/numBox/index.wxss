/* components/numBox/index.wxss */

.numContainer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

.header, .title {
  padding: 14rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header .price {
  color: #1296db;
}

.title {
  background-color: #f3f0f0;
}

.dateBox {
  padding: 6rpx 22rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #1296db;
  color: #fff;
  border-radius: 10rpx;
}

.editIcon {
  width: 40rpx;
  height: 40rpx;
}

.fz45 {
  font-size: 45rpx;
}

.fz30 {
  font-size: 20rpx;
}

/* 数字输入框 */
.numberBox {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.numberItem {
  width: 25%;
  border-right:1px solid #f3f0f0;
  border-bottom:1px solid #f3f0f0;
}
.numberItem::after {
  border:none;
}