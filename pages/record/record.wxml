<!--pages/record/record.wxml-->
<view class='topBar'>
  <view class='expenseBar {{choosenType==0?"choosenColor":""}}' bindtap='changeType' data-type='0'>支出</view>
  <view class='incomeBar {{choosenType==1?"choosenColor":""}}' bindtap='changeType' data-type='1'>收入</view>
</view>
<v-orderTab resIconList='{{consumeCategories}}' current="{{current}}" pageNum='{{pageTabNum}}'></v-orderTab>
<v-numbox bind:ontapDate="chooseDate" bind:onAddOrderNote="addOrderNote" year="{{year}}" date="{{date}}"></v-numbox>
<v-btmModel showModal="{{isShowModal}}">
  <v-calendar bind:initDate="getTodayDate" bind:onChooseDate="chooseCalenderDate" bind:changeDate="onchangeDate"></v-calendar>
</v-btmModel>