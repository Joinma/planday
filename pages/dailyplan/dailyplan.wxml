<!--pages/dailyplan/dailyplan.wxml-->
<view class='topBar' wx:if='{{!isEdit}}'>
  <image src='/images/edit.png' class='editImg' bindtap='changeToEdit'></image>
</view>
<view class='form'>
  <view class='section'>
    <text>计划标题</text>
    <input value='{{title}}' bindinput='inputTitle' maxlength='12' disabled='{{!isEdit ? true : false}}' />
  </view>
  <view class='section'>
    <text>计划内容</text>
    <textarea value='{{content}}' bindinput='inputContent' maxlength='60' disabled='{{!isEdit ? true : false}}' />
  </view>
  <view class="section">
    <text>重要程度</text>
    <picker bindchange="bindLevelChange" value="{{level}}" range="{{levels}}" disabled='{{!isEdit ? true : false}}'>
      <view class="picker">
        {{levels[level]}}
      </view>
    </picker>
  </view>
  <view class='section'>
    <text>完成奖励</text>
    <input value='{{reward}}' bindinput='inputReward' disabled='{{!isEdit ? true : false}}' />
  </view>
  <view class='section'>
    <text>未完成惩罚</text>
    <input value='{{punish}}' bindinput='inputPunish' disabled='{{!isEdit ? true : false}}' />
  </view>
  <view class='section'>
    <text>重复周期</text>
    <picker bindchange="bindTypeChange" value="{{type}}" range="{{types}}" disabled='{{!isEdit ? true : false}}'>
      <view class="picker">
        {{types[type]}}
      </view>
    </picker>
  </view>
  <view class='sumbit'>
    <button bindtap='saveDailyPlan' wx:if='{{isEdit}}' data-id='{{id}}'>提交</button>
  </view>
</view>