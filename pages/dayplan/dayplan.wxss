/* pages/dayplan/dayplan.wxss */

.form {
  font-size: 32rpx;
}

.section {
  margin: 20rpx;
}

.section > textarea {
  background: #f4f4f4;
  margin-top: 20rpx;
  width: 100%;
  height: 120rpx;
  border-radius: 10rpx;
  padding: 10rpx;
}

.section > input {
  background: #f4f4f4;
  margin-top: 20rpx;
  height: 80rpx;
  border-radius: 10rpx;
  padding: 0rpx 10rpx;
}

.picker {
  background: #f4f4f4;
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  padding: 0rpx 10rpx;
}

.form > button {
  background: linear-gradient(120deg, #4086f5, #457ad1);
  margin: 0rpx 10rpx;
}
