/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.background > image {
  border-radius: 20rpx;
  box-shadow: 6rpx 7rpx 10rpx #aaa;
}

.top {
  width: 100%;
  position: absolute;
  z-index: 1;
  margin-top: 30rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx 20rpx 20rpx 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #202524;
}

.usermotto {
  margin-top: 24rpx;
  color: #202524;
  letter-spacing: 3rpx;
  font-size: 38rpx;
  text-align: center;
}

.planTags {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-top: 32rpx;
}

.planTags > view {
  text-decoration: line-through;
  /* width: 200rpx; */
  padding: 10rpx 20rpx;
  margin: 12rpx;
  border: 1rpx solid #fff;
  background-color: #aaa;
  color: #fff;
  border-radius: 20rpx;
}
