/**index.wxss**/

.schedule {
  text-align: center;
  line-height: 240rpx;
}

.schedule >label {
  font-size: 50rpx;
}

.planTags {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-top: 32rpx;
}

.planTags > view {
  padding: 10rpx 20rpx;
  margin: 10rpx 4%;
  border: 1rpx solid #fff;
  background-color: #aaa;
  color: #fff;
  border-radius: 20rpx;
}

.delLine {
  text-decoration: line-through;
}

.maskLayer {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  z-index: 2;
}

.operateModal {
  position: absolute;
  z-index: 5;
  top: 406rpx;
  left: 206rpx;
  background: rgba(255, 255, 255, 0.753);
  border-radius: 15rpx;
  width: 106rpx;
}

.operateModal > view {
  border: none;
  border-bottom: 1px solid rgb(155, 154, 154);
  padding: 18rpx;
  text-align: center;
  font: 28rpx 宋体;
  color: rgb(61, 60, 60);
  letter-spacing: 3rpx;
}

.addPlan {
  position: absolute;
  top: 86%;
  left: 84%;
  width: 74rpx;
  height: 74rpx;
  background: rgba(0, 0, 0, 0.404);
  border-radius: 50%;
  box-shadow: 6rpx 4rpx 10rpx #aaa;
}

.addPlan > image {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  left: 14%;
  top: 14%;
}
