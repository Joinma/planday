/**index.wxss**/

.schedule {
  text-align: center;
}

.schedule > view {
  color: #ffba5a;
  font-size: 72rpx;
  line-height: 200rpx;
}

.remainingText {
  font-size: 32rpx;
}

.remainingDaysNum {
  color: #c70039;
  font: italic 45rpx 黑体;
  margin-left: 10rpx;
  margin-right: 14rpx;
}

.schedule > progress {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.tagImg {
  width: 100%;
  height: 140rpx;
}

.planTop {
  display: flex;
  align-items: center;
  margin: 20rpx 0rpx;
}

.verticalLine {
  width: 16rpx;
  height: 34rpx;
  background: #ff7657;
  margin: 0rpx 14rpx 0rpx 20rpx;
}

.planTags {
  /* display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start; */
  margin-top: 20rpx;
}

.planTags > view:nth-child(1) {
  padding: 20rpx 28rpx;
  border-top: 1rpx solid #aaa;
  border-bottom: 1rpx solid #aaa;
  border-radius: 10rpx;
}

.planTags > view:nth-child(-n-1) {
  padding: 20rpx 28rpx;
  border-bottom: 1rpx solid #aaa;
  border-radius: 10rpx;
}

.planTags > view:last-child {
  padding: 20rpx 28rpx;
}

.delLine {
  text-decoration: line-through;
}

.maskLayer {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  z-index: 2;
}

.operateModal {
  position: absolute;
  z-index: 5;
  top: 406rpx;
  left: 206rpx;
  background: rgba(255, 255, 255, 0.753);
  border-radius: 15rpx;
  width: 106rpx;
}

.operateModal > view {
  border: none;
  border-bottom: 1px solid rgb(155, 154, 154);
  padding: 18rpx;
  text-align: center;
  font: 28rpx 宋体;
  color: rgb(61, 60, 60);
  letter-spacing: 3rpx;
}

.addPlan {
  position: absolute;
  top: 86%;
  left: 84%;
  width: 74rpx;
  height: 74rpx;
  background: rgba(0, 0, 0, 0.404);
  border-radius: 50%;
  box-shadow: 6rpx 4rpx 10rpx #aaa;
}

.addPlan > image {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  left: 14%;
  top: 14%;
}
